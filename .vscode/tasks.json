{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Pascal",
            "type": "shell",
            "command": "pc ${fileBasenameNoExtension}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${fileDirname}",
                "env": {
                    "PATH": "${workspaceFolder}/bin:${env:PATH}"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "pc ${fileBasenameNoExtension} && pint ${fileBasenameNoExtension} ${fileBasenameNoExtension}",
            "group": "test",
            "options": {
                "cwd": "${fileDirname}",
                "env": {
                    "PATH": "${workspaceFolder}/bin:${env:PATH}"
                }
            },
            "problemMatcher": []
        }
    ]
}
