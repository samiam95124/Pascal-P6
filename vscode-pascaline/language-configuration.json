{
  "comments": {
    "lineComment": "!",
    "blockComment": ["{", "}"]
  },
  "brackets": [
    ["begin", "end"],
    ["(", ")"],
    ["[", "]"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "(*", "close": "*)" },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "'", "close": "'" }
  ],
  "folding": {
    "markers": {
      "start": "(?i:\\b(begin|record|case|repeat|try)\\b)",
      "end": "(?i:\\b(end|until)\\b)"
    }
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*",
  "indentationRules": {
    "increaseIndentPattern": "(?i:\\b(begin|record|case|repeat|try|then|else|do)\\s*$)",
    "decreaseIndentPattern": "(?i:^\\s*(end|until)\\b)"
  }
}
